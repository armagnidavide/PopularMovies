<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.popularmovies.DetailsActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/details_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="start"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/content_description_grid_item_imageview" />

            <TextView
                android:id="@+id/details_label_title"
                style="@style/details_labels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/details_poster"
                android:text="Title : " />

            <TextView
                android:id="@+id/details_title"
                style="@style/details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_poster"
                android:layout_toEndOf="@id/details_label_title"
                android:layout_toRightOf="@id/details_label_title" />

            <TextView
                android:id="@+id/details_label_vote_average"
                style="@style/details_labels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/details_label_title"
                android:text="Vote Average : " />

            <TextView
                android:id="@+id/details_vote_average"
                style="@style/details_number_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_label_title"
                android:layout_toEndOf="@id/details_label_vote_average"
                android:layout_toRightOf="@id/details_label_vote_average" />

            <TextView
                android:id="@+id/details_label_release_date"
                style="@style/details_labels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/details_label_vote_average"
                android:text="Release Date : " />

            <TextView
                android:id="@+id/details_release_date"
                style="@style/details_number_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_label_vote_average"
                android:layout_toEndOf="@id/details_label_release_date"
                android:layout_toRightOf="@id/details_label_release_date" />

            <TextView
                android:id="@+id/details_overview"
                style="@style/details_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_label_release_date"
                android:layout_marginTop="4dp" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>

